            android:name="com.example.akm_admin.CreatePDFActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.akm_admin.AdminAddCatActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.akm_admin.AdminFHShowActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.akm_admin.AdminSeeProductPhoneActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.akm_admin.StartingActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.akm_admin.AdminMaintainProductActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.akm_admin.AdminSeeOrderActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.akm_admin.AdminUserInfoDetailActivity"
            android:screenOrientation="portrait" />
