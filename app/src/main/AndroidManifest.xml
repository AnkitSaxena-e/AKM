            android:name="com.example.akm_admin.EditBannerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.akm_admin.RetailBannerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.akm_admin.RetailMaintainProductActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.akm_admin.RetailSeeMaintProActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.akm_admin.ReFHShowActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.akm_admin.RetailSeeOrderDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.akm_admin.RetSeeUserDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.akm_admin.RetailAddPhoneActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.akm_admin.RetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.akm_admin.CreateNewBillActivity"
            android:screenOrientation="portrait" />
