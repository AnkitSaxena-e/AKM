<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OTPJoinActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/main_background"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/image"
        android:layout_marginTop="70dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="Wait for the code I sent you..."
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:text="I sent you a code, it will be detected automatically but if it is not detected you can put it below manually as well"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary" />

    <EditText
        android:id="@+id/editTextCode_j"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView1"
        android:layout_marginTop="80dp"
        android:padding="10sp"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:digits="0123456789"
        android:hint="Enter Code"
        android:maxLength="6" />

    <Button
        android:id="@+id/buttonSignIn_j"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextCode_j"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:padding="10sp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/joinbutton"
        android:text="Conferm"
        android:textAllCaps="false"
        android:textColor="#ffffff" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:layout_below="@id/buttonSignIn_j">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wait..."
            android:textSize="17dp"
            android:layout_centerVertical="true"
            android:textColor="#0797A0"
            android:layout_alignParentLeft="true"
            android:id="@+id/timer"/>

        <ProgressBar
            android:id="@+id/progressbar_j"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:visibility="invisible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="#0797A0"
            android:visibility="gone"
            android:textSize="17dp"
            android:layout_centerVertical="true"
            android:text="Resend Code"
            android:id="@+id/resendCode"/>

    </RelativeLayout>

</RelativeLayout>