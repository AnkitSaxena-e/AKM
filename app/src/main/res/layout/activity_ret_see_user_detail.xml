<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RetSeeUserDetailActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/addressSeeAdmin_retail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ApproveA_retail"
            android:layout_marginTop="30dp" />

        <TextView
            android:id="@+id/below"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/blue"
            android:padding="10dp"
            android:text="User"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="italic" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_profile_image_profileA_retail"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/below"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30sp"
            android:background="@drawable/circuler_cat"
            android:padding="2dp"
            android:src="@drawable/profile" />

        <TextView
            android:id="@+id/profile_nameA_retail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_profile_image_profileA_retail"
            android:layout_marginTop="20dp"
            android:background="@drawable/card_background"
            android:padding="6dp"
            android:paddingLeft="20dp"
            android:text="Name"
            android:textColor="@color/blueDark"
            android:textSize="20dp"
            android:textStyle="normal|bold|italic" />

        <TextView
            android:id="@+id/profile_numberA_retail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_nameA_retail"
            android:layout_marginTop="5dp"
            android:background="@drawable/card_background"
            android:padding="6dp"
            android:paddingLeft="20dp"
            android:text="Number"
            android:textColor="@color/blueDark"
            android:textSize="20dp"
            android:textStyle="normal|bold|italic" />

        <TextView
            android:id="@+id/ShopeNameProfileA_retail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_numberA_retail"
            android:layout_marginTop="5dp"
            android:background="@drawable/card_background"
            android:padding="6dp"
            android:paddingLeft="20dp"
            android:text="Shop"
            android:textColor="@color/blueDark"
            android:textSize="20dp"
            android:textStyle="normal|bold|italic" />

        <TextView
            android:id="@+id/ApproveA_retail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ShopeNameProfileA_retail"
            android:layout_marginTop="5dp"
            android:background="@drawable/card_background"
            android:padding="6dp"
            android:paddingLeft="20dp"
            android:text="Approve"
            android:textColor="@color/blueDark"
            android:textSize="20dp"
            android:textStyle="normal|bold|italic" />

        <Button
            android:id="@+id/Delete_Account_retail"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addressSeeAdmin_retail"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/joinbutton"
            android:gravity="center"
            android:padding="10sp"
            android:text="Delete Account"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="normal|bold|italic" />

        <Button
            android:id="@+id/Sus_User_retail"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Delete_Account_retail"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/joinbutton"
            android:gravity="center"
            android:padding="10sp"
            android:text="Suspend User"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="normal|bold|italic" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_below="@+id/Sus_User_retail"
            android:id="@+id/po"
            android:measureAllChildren="false"
            android:orientation="horizontal"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/PicPhoto1_User_ret"
                    android:layout_width="305dp"
                    android:layout_height="290dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/select_product_image" />

                <ImageView
                    android:id="@+id/PicPhoto2_User_ret"
                    android:layout_width="305dp"
                    android:layout_height="290dp"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/PicPhoto1_User_ret"
                    android:src="@drawable/select_product_image" />

            </RelativeLayout>

        </HorizontalScrollView>

        <Button
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/joinbutton"
            android:text="Approve User"
            android:id="@+id/Approve_User_Ret"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginBottom="40dp"
            android:textColor="@color/white"
            android:textStyle="bold|italic"
            android:layout_below="@+id/po"
            android:textSize="20dp"/>

    </RelativeLayout>

</ScrollView>