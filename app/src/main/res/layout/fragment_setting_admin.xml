<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backbackbackback"
    tools:context=".Fragments.AdminSettingFragment">

    <RelativeLayout
        android:id="@+id/ujujujuj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/llllll"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:padding="10dp"
            android:text="Users"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="normal|bold|italic" />

        <RelativeLayout
            android:id="@+id/jjjjjj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llllll">

            <androidx.appcompat.widget.SearchView
                android:id="@+id/numberSearchAdmin_PPPP"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/loginbutton" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="Number"
                android:textSize="18dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/jjjjjj"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <androidx.appcompat.widget.SearchView
                android:id="@+id/nameSearchAdmin_PPPP"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/loginbutton" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="Name"
                android:textSize="18dp" />
        </RelativeLayout>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/AdminUserData_PPPPpp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ujujujuj"
        android:layout_margin="5dp"
        android:layout_marginTop="5dp"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:orientation="vertical"
        android:padding="2dp"
        android:scrollbars="vertical" />


</RelativeLayout>